generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  username            String
  phone               String   @unique
  creditCardNumber    String
  bank                String
  amountDue           Float
  dueMonth            String
  overduePeriodInDays Int      @default(0)
  
  // Optional but useful for demo
  status              String   @default("pending") // "pending", "calling", "called"
  lastCallAt          DateTime?
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@index([phone])
  @@index([status])
}
